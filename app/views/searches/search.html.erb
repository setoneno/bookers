<table class="table table-hover table-inverse">
  <thead>
    <% if @range == "User" %>
        <h2>User search for"<%= @word %>"</h2>
        <th></th>
        <th>User</th>
    <% else %>
        <h2>Book search for"<%= @word %>"</h2>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
    <% end %>
  </thead>
  <tbody>
    <% if @range == "User" %>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image, size: "50x50" %></td>
            <td><%= link_to user.name,user_path(user) %></td>
          </tr>
        <% end %>
    <% else %>
        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image, size: "50x50" %></td>
            <td><%= link_to book.title,book_path(book) %></td>
            <td><%= book.body %> </td>
          </tr>
        <% end %>
    <% end %>
  </tbody>
</table>