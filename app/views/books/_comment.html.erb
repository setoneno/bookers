<% book.book_comments.each do |book_comment| %>
  <table>
    <tbody>
      <tr>
      <td><%= image_tag book_comment.user.get_profile_image, size:"100x100" %>
      <%= book_comment.user.name %>
      <%= book_comment.comment %></td>
      <% if book.user == current_user %>
        <td><%= link_to "destroy", book_book_comment_path(book_comment.book,book_comment), method: :delete, class: "btn btn-sm btn-danger" %></td>
      <% end %>
      </tr>
    </tbody>
  </table>
 <% end %>
    <div>
      <%= form_with model: [book, @book_comment] do |f| %>
        <%= f.text_area :comment, class: "form-control"  %>
        <%= f.submit "送信" %>
      <% end %>
    </div>